<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SeekbarActivity">

    <LinearLayout
        android:id="@+id/layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.exoplayerdemo.seekbar.IndicatorSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:isb_max="10"
            app:isb_show_tick_marks_type="oval"
            app:isb_thumb_color="#7B3EBA"
            app:isb_thumb_size="16dp"
            app:isb_tick_marks_color="#DEB7FF"
            app:isb_tick_marks_drawable="@drawable/bg_tick_mark_odd"
            app:isb_tick_marks_size="4dp"
            app:isb_tick_texts_color="@color/selector_tick_text_color"
            app:isb_tick_texts_size="12sp"
            app:isb_ticks_count="21"
            app:isb_track_background_color="#E6E6E6"
            app:isb_track_background_size="4dp"
            app:isb_track_progress_color="#8E51CC"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="true" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>